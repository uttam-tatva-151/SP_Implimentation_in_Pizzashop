@{
    ViewData["Title"] = "Error";
    @* Layout = null;  *@
    int statusCode = ViewData["StatusCode"] as int? ?? 500;
    string message = ViewData["Message"]?.ToString() ?? "Something went wrong!";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@statusCode - @message</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #d9edf7; 
           
        }
        .color{
            color: #0b648f;
        }
        .code{
            font-size: 1500%;
            color: #0b648f;
        }
        .codediv{
            height: 60vh;
        }
    </style>
</head>

<body class="vh-100">
    <div class="d-flex align-items-center justify-content-center align-items-center mt-4">
            <img src="~/images/logos/pizzashop_logo.png" alt="PizzaShop Logo" style="max-width: 70px;">
            <h2 class="ms-2 fw-bold  color">PIZZASHOP</h2>
        </div>
    <div class="d-flex flex-column justify-content-center align-items-center codediv">
        <h1 class="display-1 fw-bold  code">@statusCode</h1>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h2 class="fw-semibold color fs-5">@message</h2>
        <p class="lead text-muted color">Oops, something went wrong.</p>
    </div>

</body>

</html>