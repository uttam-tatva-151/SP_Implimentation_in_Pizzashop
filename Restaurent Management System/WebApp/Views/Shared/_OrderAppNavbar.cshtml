@{
    string EmailId = Context.Session.GetString("Email") ?? "";
    string UserImg = Url.Action("GetUserPhoto", "Profile", new { email = EmailId }) ?? Url.Content("~/images/user.png");
    string UserName = Context.Session.GetString("UserName") ?? "Guest";
    string userRole = string.Empty;
}

<div class="navbar navbar-expand-lg bg-body-tertiary m-0 p-0" id="navbar">

    <div class="container-fluid navbar-bg">

        <a class="navbar-brand  my-2" id="navbarLogo" asp-action="Index" asp-controller="Home">

            <img src="@Url.Content("~/images/logos/pizzashop_logo.png")" class="bg-white" alt="Logo" width="60" />
            <span class="d-md-inline d-none text-white">PIZZASHOP</span>
        </a>

        <div class="btn-group">
            <div class="kotBtns mt-2 me-2 d-none d-md-flex">
                <a class="badge btn customButton me-2" asp-action="KOT" asp-controller="KOT">
                    <img src="@Url.Content("~/images/KOT_nevbar/task.png")" alt="Logo" width="18" />
                    <span>KOT</span>
                </a>
                <a class="btn customButton badge me-2" asp-action="WaitingList" asp-controller="WaitingList">
                    <img src="@Url.Content("~/images/KOT_nevbar/back-in-time.png")" alt="Logo" width="18" />
                    <span>Waiting List</span>
                </a>
                <a class="btn customButton badge activePageInOrderApp me-2" asp-action="TableView"
                    asp-controller="OrderApp">
                    <img src="@Url.Content("~/images/KOT_nevbar/box.png")" alt="Logo" width="18" />
                    <span>Tables</span>
                </a>
                <a class="btn customButton badge me-2" id="kotBtnAtNavbar" asp-action="OrderAppMenu"
                    asp-controller="OrderAppMenu">
                    <img src="@Url.Content("~/images/KOT_nevbar/reception-bell.png")" alt="Logo" width="20" />
                    <span>Menu</span>
                </a>
            </div>
            <!-- For screens smaller than md: show one button with a dropdown -->
            <div class="dropdown d-md-none me-2">
                <button class="btn w-100 d-flex justify-content-center align-items-center" type="button"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-grid-3x3-gap-fill fs-4"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end orderAppDropDown w-100">
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-action="KOT" asp-controller="KOT">
                            <img src="@Url.Content("~/images/KOT_nevbar/task.png")" alt="Logo" width="18"
                                class="me-2" /> KOT
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-action="WaitingList"
                            asp-controller="WaitingList">
                            <img src="@Url.Content("~/images/KOT_nevbar/back-in-time.png")" alt="Logo" width="18"
                                class="me-2" /> Waiting List
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center " asp-action="TableView"
                            asp-controller="OrderApp">
                            <img src="@Url.Content("~/images/KOT_nevbar/box.png")" alt="Logo" width="18" class="me-2" />
                            Tables
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" id="kotBtnAtNavbar" asp-action="OrderAppMenu"
                            asp-controller="OrderAppMenu">
                            <img src="@Url.Content("~/images/KOT_nevbar/reception-bell.png")" alt="Logo" width="20"
                                class="me-2" /> Menu
                        </a>
                    </li>
                </ul>
            </div>

            <a class="navbar-brand text-decoration-none me-0" data-bs-toggle="dropdown"
                aria-expanded="false">
                <img src="@UserImg" alt="Logo" width="45" height="45" class="bg-light rounded-circle" />
            </a>
            <ul class="dropdown-menu dropdown-menu-end ">
                <li class="d-flex px-3">
                    <img src="@UserImg" alt="Logo" width="30" height="30" class="bg-light rounded-circle" />
                    <span class="dropdown-item-text">@UserName</span>
                </li>
                <li>
                    <hr />
                </li>
                <li class="d-flex px-3 dropdown-item"><img src="@UserImg" alt="Logo" width="30" height="30"
                        class="bg-light rounded-circle" />
                    <a class="dropdown-item" asp-action="UserProfile" asp-controller="Profile">Profile page</a>
                </li>
                <li class="d-flex px-4 dropdown-item">
                    <img src="@Url.Content("~/images/refresh.png")" class="mt-2" alt="Logo" width="20" height="20" />
                    <a class="dropdown-item" asp-action="ChangePassword" asp-controller="Profile">Change password</a>
                </li>

                <li class="d-flex px-4 dropdown-item"> <img src="@Url.Content("~/images/logout.png")" class="mt-2"
                        alt="Logo" width="20" height="20" />
                    <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#LogoutModal">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="modal fade " id="LogoutModal" tabindex="-1" aria-labelledby="LogoutModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered">
        <div class="modal-content ">
            <div class="modal-body px-3 py-5 d-flex flex-column justify-content-center align-items-center">
                <img src="~/images/pngegg.png" class="mb-3" width="50" alt="">
                <span>@Constants.LOGOUT_CONFIRMATION</span>
                <div class="d-flex col-12 mt-4 container flex-nowrap justify-content-center">
                    <a type="button" asp-action="Logout" asp-controller="Profile" class="updateBtn btn w-25 ">Yes</a>
                    <button type="button" class="btn ms-3 cancelbtn w-25" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>